//leangth of link list

#include<bits/stdc++.h>
using namespace std;

class Node{
  int data;
  Node* next;
  
  public:
  Node(int val){
      data=val;
      next=nullptr;
  }
  
   friend class Linkedlist;
};


class Linkedlist{
  Node *head;
  public:
  Linkedlist(){
      head=nullptr;
  }
  void Pushback(int val){
      Node *newnode=new Node(val) ;
      if(head==nullptr){
          head=newnode;
      }else{
          Node *temp=head;
          while(temp->next!=nullptr){
              temp=temp->next;
          }
          temp->next=newnode;
      }
  }
  
   void length(){
       Node *temp=head;
       int count=0;
       while(temp!=nullptr){
           count++;
           temp=temp->next;
       }
       
       cout<<"link list length is "<< count;
   }
 
  
  void display(){
    if(head==nullptr){
        cout<<" link-list element not exist";
    }else{
        Node* temp=head;
        while(temp!=nullptr){
            cout<<temp->data<<" -> ";
            temp=temp->next;
        }
        cout<<" NULL "<<endl;
    }
}
  
};




int main(){
   Linkedlist list;
   list.Pushback(2);
   list.Pushback(3);
   list.Pushback(5);
   list.Pushback(2);
   list.Pushback(3);
   list.Pushback(5);
   list.display();
   list.length();
 
}



